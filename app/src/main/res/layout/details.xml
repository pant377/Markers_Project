<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Insert Marker Details">

    <!--  Εδω ειναι ο κωδικας για το textview  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:text="@string/insert_details"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />
    <!--  Εδω ειναι ενα edittext που γραφουμε τεις πληροφοριες για τον marker και βαζω και το limit για 60 χαρακτηρες που ειναι περιπου 10 λεξεις -->
    <EditText
        android:id="@+id/Detailsthisisone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="15"
        android:hint="@string/text_details"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="60" />
    <!--  Εδω ειναι ενα spinner για επιλογη χρωματος που γινετε απο ενα πινακα που εχω διμιουργησει μεσα στο strings.xml  -->
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/colors_array"
        android:spinnerMode="dropdown"
        android:visibility="visible" />
    <!--  Εδω ειναι ενα κουμπι ADD -->
    <Button
        android:id="@+id/buttonPaneldenxeroni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="@string/add" />

</LinearLayout>